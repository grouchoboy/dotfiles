export EDITOR='nvim'
alias vim='nvim'
alias em="emacs -nw"
alias c="docker compose"
# alias k="kubectl"

export BAT_THEME='Catppuccin Frappe'

addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

addToPathFront $HOME/.local/bin

datadisk() {
	cd /run/media/manu/DataDisk
}

datassd() {
	cd /run/media/manu/DataSSD
}

HOST=$(awk -F= '/^NAME=/{print $2}' /etc/os-release | tr -d '"')

